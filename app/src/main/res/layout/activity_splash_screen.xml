<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#303f9f"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.laurensius_dede_suhardiman.tidaklama.ActivitySplashScreen">

    <TextView
        android:id="@+id/tvLogoSingle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="T"
        android:textColor="#303f9f"
        android:textSize="36pt"
        android:textStyle="bold"
        android:background="#ffffff"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:shadowColor="#999999"/>
    <TextView
        android:id="@+id/tvLogoString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TIDAKLAMA"
        android:textColor="#FFFFFF"
        android:textSize="18pt"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvLogoLoading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Loading . . ."
        android:textColor="#FFFFFF"
        android:textSize="8pt"
        android:textStyle="bold"
        android:layout_marginTop="80dp"/>

</LinearLayout>
